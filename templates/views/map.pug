extends ../layouts/mapdefault

block css
	link(rel="stylesheet", href="/map.css")
				
block content
	.page-header
		h1 Previous Year Question Papers
		// Slideshow container
	.slideshow-container
		// Full-width images with number and caption text
		.mySlides
			.numbertext 1 / 3
			img(src='images/0.jpg', style='width:100%;')
			.text Ground Floor
		.mySlides
			.numbertext 2 / 3
			img(src='images/1.jpg', style='width:100%;')
			.text First Floor
		.mySlides
			.numbertext 3 / 3
			img(src='images/2.jpg', style='width:100%;')
			.text Second Floor
		// Next and previous buttons
		a.prev(onclick='plusSlides(-1)') ❮
		a.next(onclick='plusSlides(1)') ❯
	br
	// The dots/circles
	div(style='text-align:center;')
		span.one.dot(onclick='currentSlide(1)') Ground Floor
		span.two.dot(onclick='currentSlide(2)') First Floor
		span.three.dot(onclick='currentSlide(3)') Second Floor
